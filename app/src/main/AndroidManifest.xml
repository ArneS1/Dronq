<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dronc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dronc_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dronc_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".add_statement"
            android:label="@string/title_activity_add_statement"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".GameActivity" />
        <activity
            android:name=".NewPlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>